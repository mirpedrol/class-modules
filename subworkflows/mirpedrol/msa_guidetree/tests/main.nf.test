nextflow_workflow {

    name "Test Subworkflow MSA_GUIDETREE"
    script "../main.nf"
    workflow "MSA_GUIDETREE"

    tag "subworkflows"
    tag "subworkflows_mirpedrol"
    tag "subworkflows/msa_guidetree"
    tag "clustalo/guidetree"
    tag "famsa/guidetree"
    tag "magus/guidetree"


    test("clustalo/guidetree") {

        when {
            process {
                """
                input[0] = Channel.of( [ id:'test' ], file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fasta/contigs.fasta', checkIfExists: true), 'clustalo_guidetree' )
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() },
            )
        }
    }

    test("famsa/guidetree") {

