nextflow_workflow {

    name "Test Subworkflow MSA_ALIGNMENT"
    script "../main.nf"
    workflow "MSA_ALIGNMENT"

    tag "subworkflows"
    tag "subworkflows_mirpedrol"
    tag "subworkflows/msa_alignment"
    tag "clustalo/align"
    tag "famsa/align"
    tag "kalign/align"
    tag "learnmsa/align"
    tag "magus/align"
    tag "muscle5/super5"
    tag "tcoffee/align"

    config './nextflow.config'

    test("clustalo/align") {

        when {
            workflow {
                """
                input[0] = Channel.of( [[ id:'test', single_end:false ], file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fasta/scaffolds.fasta', checkIfExists: true), 'clustalo_align'] )
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match("clustalo/align") },
            )
        }
    }

