    test("clustalo/align") {

        when {
            workflow {
                """
                input[0] = Channel.of( [ id:'test', single_end:false ], file(params.modules_testdata_base_path + 'genomics/sarscov2/illumina/fasta/scaffolds.fasta', checkIfExists: true), 'clustalo_align' )
                input[1] = Channel.of( [] )
                input[2] = Channel.of( [] )
                input[3] = Channel.of( [] )
                input[4] = Channel.of( [] )
                input[5] = Channel.of( [] )
                input[6] = Channel.of( [] )
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(workflow.out).match() },
            )
        }
    }

